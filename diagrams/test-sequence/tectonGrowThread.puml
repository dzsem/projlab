@startuml tectonGrowThreadTest

actor "Tester" as tst
participant "t: Tecton" as t
participant "mt: MushroomThread" as mt

activate tst

tst -> t: addConnection(mt)
activate t

alt mt.from is not neighbour 
    tst <-- t: throw Exception
end

t -> t: t.mushroomThreads.Add(mt)
tst <-- t
deactivate t

deactivate tst

@enduml